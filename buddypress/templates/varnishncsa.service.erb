[Unit]
Description=Varnish HTTP accelerator logging daemon
After=varnish.service

[Service]
Type=forking
PIDFile=/var/run/varnishlog.pid
ExecStart=/usr/bin/varnishncsa -a -w /var/log/varnish/varnishlog.log -D -P /var/run/varnishlog.pid -n acerola  -F %h|%l|%u|%t|\"%r\"|%s|%b|\"%{Referer}i\"|\"%{User-agent}i\"

[Install]
WantedBy=multi-user.target